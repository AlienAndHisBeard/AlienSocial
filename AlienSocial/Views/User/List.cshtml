@model IEnumerable<AlienSocial.Models.User>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section menu {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Friends" asp-action="">Friends</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Add">User</a>
    </li>
    <li class="nav-item align-self-end" style="margin-left:auto">
        <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Log Out</a>
    </li>
}

<h1>User list</h1>

<p>
    <a asp-action="Add">Add new user</a>
</p>

<p>
    <a asp-action="Init">Init users</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "User", new { login=item.Login })
                </td>
            </tr>
        }
    </tbody>
</table>
